<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>検索結果表示サンプル</title>
  <style>
    #result {
      margin-top: 20px;
      padding: 10px;
      border: 1px solid #ccc;
      width: 300px;
    }
  </style>
</head>
<body>

  <h2>検索フォーム</h2>

  <input type="text" id="searchInput" placeholder="検索ワードを入力">
  <button id="searchBtn">検索</button>

  <div id="result">ここに検索結果が表示されます</div>

  <script>
    document.getElementById("searchBtn").addEventListener("click", function () {
      const keyword = document.getElementById("searchInput").value;

      if (!keyword) {
        document.getElementById("result").textContent = "検索ワードを入力してください。";
        return;
      }

      // 仮の検索結果（本来はAPIなどで取得）
      const fakeResult = `「${keyword}」の検索結果です。`;

      document.getElementById("result").textContent = fakeResult;
    });
  </script>

</body>
</html>
